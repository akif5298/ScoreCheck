{
  "name": "scorecheck",
  "version": "1.0.0",
  "description": "NBA 2K25 box score analysis application",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec ts-node -r tsconfig-paths/register src/server/index.ts",
    "dev:client": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server/index.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:setup-admin": "node scripts/add-admin-role.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts client/src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts client/src/**/*.ts --fix"
  },
  "keywords": [
    "nba",
    "2k25",
    "basketball",
    "analytics",
    "box-score"
  ],
  "author": "ScoreCheck Team",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/vision": "^4.3.3",
    "@prisma/client": "^5.6.0",
    "@supabase/supabase-js": "^2.54.0",
    "@techstark/opencv-js": "^4.11.0-release.1",
    "apple-signin-auth": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "image-js": "^0.37.0",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "opencv.js": "^1.2.1",
    "pg": "^8.16.3",
    "prisma": "^5.6.0",
    "sharp": "^0.34.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
